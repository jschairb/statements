<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", line_items_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_line_item_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> LineItems</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.line_item.cost", :default => t("activerecord.labels.cost", :default => "Cost")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @line_items.each do |line_item| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= line_item.id %>
          </td>
                    <td>
            <%= link_to line_item.cost, line_item_path(line_item) %>
          </td>
                    <td>
            <%= line_item.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", line_item_path(line_item) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_line_item_path(line_item) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", line_item_path(line_item), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
