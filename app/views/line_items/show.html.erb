<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", line_items_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_line_item_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", line_item_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.line_item.cost", :default => t("activerecord.labels.cost", :default => "Cost")) %>:</b>
          <%= @line_item.cost %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.line_item.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @line_item.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.line_item.quantity", :default => t("activerecord.labels.quantity", :default => "Quantity")) %>:</b>
          <%= @line_item.quantity %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.line_item.price", :default => t("activerecord.labels.price", :default => "Price")) %>:</b>
          <%= @line_item.price %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.line_item.statement_id", :default => t("activerecord.labels.statement_id", :default => "Statement")) %>:</b>
          <%= @line_item.statement_id %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_line_item_path(@line_item), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", line_item_path(@line_item), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>